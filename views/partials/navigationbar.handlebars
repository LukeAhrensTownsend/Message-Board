{{#if (equals theme "light")}}
    <link rel="stylesheet" type="text/css" href="/styles/navigationbarstyle.css">
{{else}}
    <link rel="stylesheet" type="text/css" href="/styles/navigationbarstyle-dark.css">
{{/if}}

<ul id="navigation-bar">
    <li class="left"><a href="messageboard">Message Board</a></li>
    {{#if (isLoggedIn)}}
        <li class="left"><a href="myposts">My Posts</a></li>
    {{/if}}
    {{#if (equals username "Administrator")}}
        <li class="left"><a href="users">Users</a></li>
    {{/if}}
    {{#if (isLoggedIn)}}
        <li class="right"><a href="logout">Logout</a></li>
        <li class="right"><a href="settings">Settings</a></li>
        <li class="right"><div id="logged-in-as">Logged in as <div class="username">{{username}}</div></div></li>
    {{else}}
        <li class="right"><a href="createaccount">Create Account</a></li>
        <li class="right"><a href="login">Login</a></li>
    {{/if}}
</ul>