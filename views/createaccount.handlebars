<link rel="stylesheet" type="text/css" href="/styles/loginstyle.css">
<form method="POST" action="/registeruser?origin=createaccount">
    <div class="container">
        <h1>Create account</h1>
        {{#if message}}
            <p>
                {{message}}
            </p>
        {{/if}}
        <label for="username"><b>Username</b></label>
        <input type="text" name="username" placeholder="Enter Username" maxlength="20" required><br>

        <label for="password1"><b>Password</b></label>
        <input type="password" name="password1" placeholder="Enter Password" maxlength="20" required><br>

        <label for="password2"><b>Re-type Password</b></label>
        <input type="password" name="password2" placeholder="Enter Password" maxlength="20" required><br>

        <button type="submit">Confirm</button>
        <a id="cancel-button" href="javascript:history.back()">Cancel</a>
    </div>
</form>