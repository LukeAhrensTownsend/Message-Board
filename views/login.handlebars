<link rel="stylesheet" type="text/css" href="/styles/loginstyle.css">
<form method="POST" action="/processlogin">
    <div class="container">
        <img class="logo" src="/logo.png" onclick="location.href='/messageboard';">
        {{#if message}}
            <p>
                {{message}}
            </p>
        {{/if}}
        <label for="username"><b>Username</b></label>
        <input type="text" name="username" placeholder="Enter Username" maxlength="20" required><br>

        <label for="password"><b>Password</b></label>
        <input type="password" name="password" placeholder="Enter Password" maxlength="20" required><br>

        <button type="submit">Login</button>
        <a id="create-account-button" href="/createaccount">Create account</a>
    </div>
</form>